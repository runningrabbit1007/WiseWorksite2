<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dwg_change_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <include layout="@layout/inc_common_top_bar"/>

    <View
        style="@style/gray_line_7"/>

    <!--基本信息  一共放置6个小内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <View
            style="@style/blue_line"/>

        <TextView
            android:id="@+id/main_title_one_desc"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="@color/text_first_color"
            android:textSize="@dimen/content_second_title_size" />

        <TextView
            android:id="@+id/main_title_one_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核中…"
            android:textColor="@color/text_green_color"
            android:textSize="@dimen/content_second_title_size"/>
    </LinearLayout>

    <View
        style="@style/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_section_one_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_one_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/first_section_two_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_two_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

            <TextView
                android:id="@+id/first_section_two_content_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_red_color"/>

        </LinearLayout>

        <!--变更时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/first_section_three_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_three_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/first_section_four_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/first_section_four_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_four_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_section_five_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/first_section_five_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_five_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_section_six_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/first_section_six_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/first_section_six_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>



        <View
            style="@style/gray_line_3"
            android:background="@color/white"/>

    </LinearLayout>

    <View
        style="@style/gray_line_7"/>

    <!--变更信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <View
            style="@style/blue_line"/>

        <TextView
            android:id="@+id/main_title_two_desc"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first_color"
            android:textSize="@dimen/content_second_title_size" />
    </LinearLayout>

    <View
        style="@style/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_section_one_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/second_section_one_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/second_section_two_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/second_section_two_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

            <TextView
                android:id="@+id/second_section_two_content_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_red_color"/>

        </LinearLayout>

        <!--变更时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/second_section_three_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/second_section_three_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/second_section_four_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/second_section_four_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/second_section_five_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_third_title_size"
                android:textColor="@color/text_third_color"/>


            <TextView
                android:id="@+id/second_section_five_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_second_title_size"
                android:textColor="@color/text_first_color"/>

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/grid_view_image_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/content_third_title_size"
        android:textColor="@color/text_third_color"/>

    <com.sx.common_base.view.ImplantGridView
        android:id="@+id/imgGradView"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_10"
        android:horizontalSpacing="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>




</LinearLayout>
