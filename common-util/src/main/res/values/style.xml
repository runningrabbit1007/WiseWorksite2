<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="white_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="blue_line">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/text_main_color</item>
    </style>


    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_background_color</item>
    </style>


    <style name="gray_line_bigger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@color/line_background_color</item>
    </style>


    <style name="gray_line_v">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_background_color</item>
    </style>

    <style name="gray_deep_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_background_color</item>
    </style>

    <!-- 宽高包裹 -->
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="height_wrap_width_weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 宽度是内容填充，高度权重是1 -->
    <style name="width_wrap_height_weight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="width_weight_vi" parent="wrap_content">
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 宽度match_parent,高度是0，高度权重是一 -->
    <style name="width_match_height_weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 宽度全屏高度包裹 -->
    <style name="width_wrap_height_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 宽高都是全屏 -->
    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="width_fill_height_weight">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>