<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hinder_danger_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sx.common_base.activity.project_maneger.HinderDangerDetailActivity">

    <include
        layout="@layout/inc_common_top_bar"/>

    <ScrollView
        android:layout_below="@+id/title_bar"
        android:background="@color/white"
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                style="@style/gray_line_7"/>


        <!--基本信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <View
                    style="@style/blue_line"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/text_first_color"
                    android:textSize="@dimen/content_second_title_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整改中…"
                    android:textColor="@color/text_green_color"
                    android:textSize="@dimen/content_second_title_size"/>
            </LinearLayout>

            <View
                style="@style/gray_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <!--发文编号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="隐患编号："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/content_no"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>


                <!--变更主题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_6">

                    <TextView
                        android:text="隐患名称："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/change_title"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>


                </LinearLayout>

                <!--变更时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_6">

                    <TextView
                        android:text="上报时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/change_time"
                        android:text="2018-16-16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>

                <View
                    style="@style/gray_line_3"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                style="@style/gray_line_7"/>


            <!--变更信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <View
                    style="@style/blue_line"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐患详情"
                    android:textColor="@color/text_first_color"
                    android:textSize="@dimen/content_second_title_size" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <!--审核人员-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="发布人员："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/check_person"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:text="责任人员："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/publish_unit"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:text="联系电话："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/contact_phone"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:text="整改期限："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:id="@+id/check_time"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:text="隐患内容："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_third_title_size"
                        android:textColor="@color/text_third_color"/>


                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/check_reason"
                        android:text="NOO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_second_title_size"
                        android:textColor="@color/text_first_color"/>

                </LinearLayout>


            </LinearLayout>


            <com.sx.common_base.view.ImplantGridView
                android:id="@+id/imgGradView"
                android:numColumns="4"
                android:verticalSpacing="@dimen/dp_10"
                android:horizontalSpacing="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>
    </ScrollView>
    
    <View
        android:layout_above="@+id/bottom_ll"
        style="@style/gray_line"/>

    <RelativeLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            style="@style/grayWhiteBtn"
            android:layout_alignParentRight="true"
            android:text="排查"/>

    </RelativeLayout>


</RelativeLayout>
