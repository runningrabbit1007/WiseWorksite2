<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">

    <include layout="@layout/item_top_content_two"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:textColor="@color/text_first_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/item_content"
            android:layout_weight="2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_third_title_size"
            android:textColor="@color/text_second_color"/>

        <TextView
            android:id="@+id/item_status"
            style="@style/blueWhiteBtn"
            android:text="整改"
            android:layout_marginLeft="@dimen/dp_20" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/rectification_person_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_third_color"
            android:textSize="@dimen/content_third_title_size"/>

        <TextView
            android:id="@+id/rectification_person"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/rectification_person_desc"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/content_third_title_size"/>


        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_red_color"
            android:textSize="@dimen/content_third_title_size"/>

        <TextView
            android:id="@+id/deadline_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/deadline"
            android:textColor="@color/text_third_color"
            android:textSize="@dimen/content_third_title_size"/>


    </RelativeLayout>

    </LinearLayout>

    <View
        style="@style/gray_line_7"/>


</LinearLayout>