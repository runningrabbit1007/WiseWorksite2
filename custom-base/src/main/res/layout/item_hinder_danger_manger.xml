<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_10">

        <include layout="@layout/item_top_content" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/sp15">

            <TextView
                android:id="@+id/item_hinder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_first_color"
                android:textSize="@dimen/content_second_title_size"
                />

            <TextView
                android:id="@+id/item_hinder_check_btn"
                style="@style/blueWhiteBtn"
                android:visibility="gone"
                android:text="排查"/>

            <TextView
                android:id="@+id/item_hinder_close_btn"
                style="@style/blueWhiteBtn"
                android:background="@drawable/orange_white_btn"
                android:textColor="@color/text_orange_color"
                android:visibility="gone"
                android:text="关闭"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_hinder_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.4"
            android:textSize="@dimen/content_third_title_size"
            android:textColor="@color/text_third_color"/>


        <View
            style="@style/gray_line_7"
            android:background="@color/white"/>

    </LinearLayout>


</LinearLayout>