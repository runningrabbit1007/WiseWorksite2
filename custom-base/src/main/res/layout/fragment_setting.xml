<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:landptf="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    >


    <include layout="@layout/inc_common_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_color">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/beijing"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/morentouxiang"
                android:paddingLeft="@dimen/dp_15"/>


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_toRightOf="@id/head_image"
                android:paddingLeft="@dimen/dp_15"
                android:text="用户名"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_toRightOf="@id/head_image"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:layout_below="@id/username"
                android:text="职位：项目经理"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <!--文档信息-->
            <com.sx.common_base.view.ButtonExtendM
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                landptf:iconDrawable="@drawable/wendangxinxi"
                landptf:textCharacter="文档信息"
                landptf:textColor="@color/text_first_color"/>

            <!--随手拍-->
            <com.sx.common_base.view.ButtonExtendM
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                landptf:iconDrawable="@drawable/suishoupai"
                landptf:textCharacter="随手拍"
                landptf:textColor="@color/text_first_color"/>

            <!--计算器-->
            <com.sx.common_base.view.ButtonExtendM
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                landptf:iconDrawable="@drawable/jisuanqi"
                landptf:textCharacter="计算器"
                landptf:textColor="@color/text_first_color"/>

            <!--工地备忘录-->
            <com.sx.common_base.view.ButtonExtendM
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                landptf:iconDrawable="@drawable/gongdibeiwanglu"
                landptf:textCharacter="工地备忘录"
                landptf:textColor="@color/text_first_color"/>

        </LinearLayout>


        <!--我的项目-->
        <LinearLayout
            android:id="@+id/go_to_my_project_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的项目"
                android:gravity="left"
                android:textSize="@dimen/content_first_title_size"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/text_first_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一号工地"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="@color/text_second_color"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/xuanze"/>

        </LinearLayout>

        <!--清楚缓存-->
        <LinearLayout
            android:id="@+id/go_to_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:gravity="left"
                android:textSize="@dimen/content_first_title_size"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/text_first_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="10.1M"
                android:textSize="14sp"
                android:textColor="@color/text_blue_color"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/xuanze"/>

        </LinearLayout>

        <!--修改密码-->
        <LinearLayout
            android:id="@+id/go_to_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:gravity="left"
                android:textSize="@dimen/content_first_title_size"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/text_first_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="@color/text_second_color"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/xuanze"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/text_main_color"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="17sp" />



</LinearLayout>