<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_psw_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sx.wiseworksite.login.ForgotPswTwoActivity">

    <include layout="@layout/inc_common_top_bar" />


    <!--新密码-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mima"
                android:id="@+id/password_img"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/newPassword"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/password_img"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:paddingLeft="@dimen/dp_20"
                />
        </RelativeLayout>
        <View style="@style/gray_line"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>


    <!--新密码再一次-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mima"
                android:id="@+id/password_again_img"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/re_newPassword"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="确定密码"
                android:layout_toRightOf="@id/password_again_img"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_20"
                />
        </RelativeLayout>
        <View style="@style/gray_line"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>


    <TextView
        android:id="@+id/goToForgotPswTwo"
        android:layout_marginTop="@dimen/dp_30"
        style="@style/loginSureBtn"
        android:text="完成"/>


</LinearLayout>
