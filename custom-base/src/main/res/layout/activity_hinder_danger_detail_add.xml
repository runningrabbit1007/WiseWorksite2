<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hinder_danger_detail_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sx.common_base.activity.project_maneger.HinderDangerDetailAddActivity">

    <include
        layout="@layout/inc_common_top_bar"/>


    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <View
                style="@style/gray_line_7"/>

            <!--隐患名称-->
            <LinearLayout
                style="@style/linear_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.48dp"
                    android:text="隐患名称"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp15" />

                <EditText
                    style="@style/width_weight"
                    android:background="@null"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:textColor="@color/publish_text_color"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>


            <!--上报人员-->
            <LinearLayout
                style="@style/linear_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.48dp"
                    android:text="上报人员"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp15" />

                <EditText
                    style="@style/width_weight"
                    android:background="@null"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:textColor="@color/publish_text_color"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>

            <!--责任人员-->
            <LinearLayout
                style="@style/linear_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.48dp"
                    android:text="责任人员"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp15" />

                <EditText
                    style="@style/width_weight"
                    android:background="@null"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:textColor="@color/publish_text_color"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>


            <!--联系电话-->
            <LinearLayout
                style="@style/linear_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.48dp"
                    android:text="联系电话"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp15" />

                <EditText
                    style="@style/width_weight"
                    android:background="@null"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:textColor="@color/publish_text_color"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>

            <!--整改期限-->
            <LinearLayout
                style="@style/linear_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.48dp"
                    android:text="整改期限"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/modify_time_select"
                    style="@style/width_weight"
                    android:background="@null"
                    android:text="请选择"
                    android:padding="5dp"
                    android:textColor="@color/publish_text_color"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <View
                style="@style/gray_line"/>


            <LinearLayout
                android:layout_height="@dimen/dp_100"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical">

                <EditText
                    android:gravity="start"
                    android:textColor="@color/text_first_color"
                    android:textSize="@dimen/sp15"
                    android:background="@null"
                    android:id="@+id/detail_adress"
                    android:padding="@dimen/dp_10"
                    android:hint="隐患内容……"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="@dimen/dp_100"/>

            </LinearLayout>

            <View style="@style/gray_line" />


            <com.sx.common_base.view.ImplantGridView
                android:id="@+id/image_list"
                style="@style/width_match_height_wrap"
                android:background="@color/white"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />




        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="@color/text_main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/save_btn"
            android:text="上报"
            style="@style/save_btn"
            android:background="@color/text_main_color"/>
    </LinearLayout>



</LinearLayout>
