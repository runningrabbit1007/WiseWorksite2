<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp" >

    <Button
        android:text="@string/activity_select_photo"
        android:id="@+id/image_depot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/single_param_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textColor="#ff4600"
        android:textSize="@dimen/ts7" />

    <View 
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/main_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        />
    
    <Button
        android:text="@string/activity_select_camera"
        android:id="@+id/photo_camre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/single_param_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="@dimen/ts7" />

    <Button
        android:textColor="#ff4600"
        android:text="取消"
        android:id="@+id/user_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/single_param_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="@dimen/ts7" />

</LinearLayout>